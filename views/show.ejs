<% include ./partials/header %>

<div class="ui main text container segment">
	<div class="ui centered huge header"><span><%= student.firstName %> </span><span><%= student.surname %></span></div>
	<div class="ui top attached">
		<div class="item">
			<img class="ui centered rounded image" src="<%= student.image %>">
			<div class="content">
				<table class="ui very basic table">
					<tbody>
					    <tr>
					      <td></td>
					      <td></td>
					    </tr>
					    <tr>
					      <td><b>Registration Date</b></td>
					      <td><span><%= student.regDate.toDateString() %></span></td>
					    </tr>
					    <tr>
					      <td><b>Student ID</b></td>
					      <td><span><%= student.studentID %></span></td>
					    </tr>
					    <tr>
					      <td><b>Sex</b></td>
					      <td><span><%= student.sex %></span></td>
					    </tr>
					    <tr>
					      <td><b>Age</b></td>
					      <td><span><%= student.age %></span></td>
					    </tr>
					    <tr>
					      <td><b>State of Origin</b></td>
					      <td><span><%= student.stateOfOrigin %></span></td>
					    </tr>
					    <tr>
					      <td><b>Address</b></td>
					      <td><span><%- student.address %></span></td>
					    </tr>
					    <tr>
					      <td><b>Programming Language</b></td>
					      <td><span><%= student.programLanguage %></span></td>
					    </tr>
					    <tr>
					      <td><b>Proficiency</b></td>
					      <td><span><%= student.proficiency %></span></td>
					    </tr>
					    <tr>
					      <td><b>Bio</b></td>
					      <td><span><%- student.bio %></span></td>
					    </tr>
					</tbody>
				</table>
			</div>
			<a class="ui orange basic button" href="/students">< Back</a>
			<a class="ui blue basic button" href="/students/<%= student._id %>/edit">Edit</a>
			<form id = "delete" action ="/students/<%= student._id %>?_method=DELETE" method="POST">
					<button class="ui red inverted button">Delete</button>
			</form>
		</div>
	</div>
</div>
<% include ./partials/footer %>